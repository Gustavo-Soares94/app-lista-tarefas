<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".MenuDeApisRestActivity">

    <TextView
        android:id="@+id/textViewApiRestJson"
        android:layout_width="180dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="59dp"
        android:hint="Apis JsonPlaceHolder"
        android:textColor="@color/teal_700"
        android:textColorHint="@color/design_default_color_secondary_variant"
        android:textSize="36sp" />

    <Button
        android:id="@+id/bt_abrir_post"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textViewApiRestJson"
        android:layout_centerHorizontal="true"
        android:background="#0FC565"
        android:onClick="irPost"
        android:text="Post"
        app:backgroundTint="@color/teal_700" />

    <Button
        android:id="@+id/bt_abrir_albums"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/bt_abrir_post"
        android:layout_centerHorizontal="true"
        android:background="#0FC565"
        android:onClick="irAlbums"
        android:text="Albums"
        app:backgroundTint="@color/teal_700" />

    <Button
        android:id="@+id/bt_abrir_todos"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/bt_abrir_albums"
        android:layout_centerHorizontal="true"
        android:background="#0FC565"
        android:onClick="irTodos"
        android:text="Todos"
        app:backgroundTint="@color/teal_700" />

    <Button
        android:id="@+id/bt_abrir_comments"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/bt_abrir_todos"
        android:layout_centerHorizontal="true"
        android:background="#0FC565"
        android:onClick="irComments"
        android:text="Comments"
        app:backgroundTint="@color/teal_700" />

</RelativeLayout>