<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".TelaPrincipalActivity">

    <TextView
        android:id="@+id/textViewBemVindo"
        android:layout_width="180dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="59dp"
        android:hint="Bem Vindo"
        android:textColor="@color/teal_700"
        android:textColorHint="@color/design_default_color_secondary_variant"
        android:textSize="36sp" />

    <Button
        android:id="@+id/bt_voltar_login"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textViewBemVindo"
        android:layout_centerHorizontal="true"
        android:background="#0FC565"
        android:onClick="voltarLogin"
        android:text="Voltar Login"
        app:backgroundTint="@color/teal_700" />

    <Button
        android:id="@+id/bt_voltar_splash"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/bt_voltar_login"
        android:layout_alignStart="@+id/bt_voltar_login"
        android:layout_alignLeft="@+id/bt_voltar_login"
        android:layout_centerHorizontal="true"
        android:background="#0FC565"
        android:onClick="voltarSplash"
        android:text="Voltar Splash"

        app:backgroundTint="@color/teal_700" />



</RelativeLayout>